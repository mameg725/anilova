<%= render "public/users/leftbar", me: current_user %>

<div class="content">
<div class="col-xs-7">
	<table>
		<tr>
			<td>
				<%= attachment_image_tag(@post, :post_image, :fill, 400, 400, fallback: "カメラでの撮影禁止アイコン 3.jpeg", size: "400x400") %>
			</td>
		</tr>
		<% if user_signed_in? %>
		<tr>
			<td>
				<%= attachment_image_tag(current_user, :icon_image, :fill, 50, 50, fallback: "カメラでの撮影禁止アイコン 3.jpeg", size:"50x50") %>
				<%= current_user.name %>
				@<%= current_user.friendly_url %>
			</td>
		</tr>
		<tr>
			<td>
				<%= form_for [@post, @post_comment] do |f| %>
					<%= f.text_area :reaction, size: "50", placeholder: "コメント" %>
					<%= f.submit "Sent" %>
				<% end %>
			</td>
		</tr>
		<% end %>
	</table>
</div>

<div class="row col-xs-4">
	<table>
		<tr>
			<td>
				<% if user_signed_in? && @post.user_id == current_user.id %>
					<%= link_to users_mypage_path(current_user.friendly_url) do %>
					<%= attachment_image_tag(@post.user, :icon_image, :fill, 50, 50, fallback: "カメラでの撮影禁止アイコン 3.jpeg", size:"50x50") %>
					<%= @user.name %>
					@<%= @user.friendly_url %><br>
					<% end %>
				<% else %>
					<%= link_to(@post.user) do %>
					<%= attachment_image_tag(@post.user, :icon_image, :fill, 50, 50, fallback: "カメラでの撮影禁止アイコン 3.jpeg", size:"50x50") %>
					<%= @user.name %>
					@<%= @user.friendly_url %><br>
					<% end %>
				<% end %>
			</td>
		</tr>
		<tr>
			<td height="50">
				<%= @post.created_at.to_s(:datetime_jp) %>
			</td>
		</tr>
		<tr>
			<td>
				<% @post.tag_list.each do |tag| %>
					<span><%= link_to tag, posts_path(tag_name: tag) %></span>
				<% end %>
			</td>
		</tr>
		<tr>
			<td class="murmur">
				<%= @post.murmur %>
				<% if user_signed_in? %>
					<% if @post.favorite_by?(current_user) %>
						<%= link_to post_favorites_path(@post), method: :delete do %>
							<span class="glyphicon glyphicon-heart">
								<%= @post.favorites.count%>
							</span>
						<% end %>
					<% else %>
						<%= link_to post_favorites_path(@post), method: :post do %>
							<span class="glyphicon glyphicon-heart-empty">
								<%= @post.favorites.count %>
							</span>
						<% end %>
					<% end %>
				<% end %>
			</td>
		</tr>
		<% @post_comments.each do |post_comment| %>
		<tr>
			<td>
				<%= link_to user_path(post_comment.user.friendly_url) do %>
				<%= attachment_image_tag(post_comment.user, :icon_image, :fill, 50, 50, fallback: "カメラでの撮影禁止アイコン 3.jpeg", size:"50x50") %>
				<%= post_comment.user.name %>
				@<%= post_comment.user.friendly_url %>
				<% end %>
			</td>
		</tr>
		<tr width="30">
			<td height="50">
				<%= post_comment.reaction %>
				<% if user_signed_in? && post_comment.user.id == current_user.id %>
					<%= link_to "削除", post_post_comments_path(post_comment.id), method: :delete %>
				<% end %>
			</td>
		</tr>
		<% end %>
	</table>
</div>
</div>
