	<%= link_to "Back", :back %>
	Seach
</div>
<% if @model == 'users' %>
	<h3>'<%= @content %>'の検索結果</h3>
	<%= render 'public/users/index', users: @records %>
<% elsif @model == 'posts' %>
	<h3>'<%= @content %>'の検索結果</h3>
	<%= render 'public/posts/index', posts: @records %>
<% elsif @model == "tags" %>
	<h3>'<%= @content %>'の検索結果</h3>
	<%= render 'public/posts/tag_index', tags: @records %>
<% end %>
</div>